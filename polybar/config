[colors]
background = #000516
background-tp = #151e37
background-alt = #16202b
foreground = #d9d8db
foreground-alt = #bcbcc4
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 25
; offset-x = 1%
; offset-y = 1%
radius = 0.0
fixed-center = true

background = ${colors.background-tp}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 1
border-color = ${colors.background-alt}

padding = 0

module-margin = 0

font-0 = Fira Code:size=10;2
font-1 = Noto Color Emoji:scale=15;2
font-2 = Noto Sans Symbols2:size=10;2
font-3 = Powerline Extra Symbols:size=17;3

modules-left = power i3 separator-lower-left separator-upper-right xwindow separator-lower-left
modules-center = separator-upper-right date separator-upper-left
modules-right = separator-lower-right spotify weather pulseaudio memory cpu wlan battery temperature separator-upper-left

tray-position = right
tray-padding = 2
;tray-background = #0063ff

wm-restack = i3

;override-redirect = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/power]
type = custom/text

content-background = ${colors.background}

content = ⏻
content-padding = 1

click-left = power_menu

[module/spotify]
type = custom/script
interval = 1
format = <label>
format-prefix = "🎵 "
format-background = ${colors.background}
format-padding = 1
format-underline = #1db954
exec = ~/.config/polybar/spotify-status

[module/weather]
type = custom/script
interval = 900
exec = curl -s --compressed 'https://wttr.in/?format="%c+%t+%w"&m' | tr -d '"'
format = <label>
format-background = ${colors.background}
format-padding = 1
format-underline = #87ceeb

[module/xwindow]
