#-*- sh -*- Emacs mode

append_to_path() {
    if ! [ -z "${PATH##*$1*}" ]; then
        export PATH="$PATH:$1"
    fi
}

prepend_to_path() {
    if ! [ -z "${PATH##*$1*}" ]; then
        export PATH="$1:$PATH"
    fi
}

string_join() {
    IFS=$1
    shift # shift off the delimiter
    echo "$*"
}
