#-*- sh -*- Emacs mode

append_to_path() {
    case ":$PATH:" in
        *":$1:"*) :;; # Already on path
        *) PATH="$1:$PATH";;
    esac
}

prepend_to_path() {
    case ":$PATH:" in
        *":$1:"*) :;; # Already on path
        *) PATH="$PATH:$1";;
    esac
}

string_join() {
    IFS=$1
    shift # shift off the delimiter
    echo "$*"
}
