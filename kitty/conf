shell /bin/bash --login

font_family Fira Code
font_size 10
adjust_line_height 1

# Lower refresh rate a bit.  We don't need our terminal to run at 100 FPS
repaint_delay 15
input_delay 5

# special
foreground #b7b8b9
background #0c0d0e
cursor     #b7b8b9

# black
color0     #0c0d0e
color8     #737475

# red
color1     #e31a1c
color9     #e31a1c

# green
color2     #31a354
color10    #31a354

# yellow
color3     #dca060
color11    #dca060

# blue
color4     #3182bd
color12    #3182bd

# magenta
color5     #756bb1
color13    #756bb1

# cyan
color6     #80b1d3
color14    #80b1d3

# white
color7     #b7b8b9
color15    #fcfdfe

clear_all_shortcuts yes

clipboard_control write-primary write-clipboard read-clipboard

map kitty_mod+c copy_to_clipboard
map kitty_mod+v paste_from_clipboard
map super+c copy_to_clipboard
map super+v paste_from_clipboard

map kitty_mod+equal change_font_size current +2.0
map kitty_mod+minus change_font_size current -2.0

window_alert_on_bell no
