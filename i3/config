client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
client.background       #000000

hide_edge_borders both

title_align center

# Lock screen
bindsym $mod+l exec --no-startup-id loginctl lock-session

# Print screen commands
bindsym --release Print exec scrot --exec 'mv $f ~/Pictures/'
bindsym --release Shift+Print exec scrot --select --freeze --exec 'mv $f ~/Pictures/'
# And for shit keyboards with no printscreen
bindsym --release $mod+F4 exec scrot --exec 'mv $f ~/Pictures/'
bindsym --release $mod+Shift+F4 exec scrot --select --freeze --exec 'mv $f ~/Pictures/'

# start a terminal
bindsym $mod+Ctrl+t exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
# bindsym $mod+d exec "dmenu_run -nf '#BBBBBB' -nb '#222222' -sb '#005577' -sf '#EEEEEE' -fn 'monospace-10' -p 'dmenu prompt >'"
bindsym $mod+d exec rofi -show run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# Emoji selection ðŸ˜€
bindsym $mod+Ctrl+e exec splatmoji type
bindsym $mod+Shift+e exec splatmoji copy

# move workspace
bindsym $mod+Ctrl+Left exec i3-grid left
bindsym $mod+Ctrl+Down exec i3-grid down
bindsym $mod+Ctrl+Up exec i3-grid up
bindsym $mod+Ctrl+Right exec i3-grid right

# move window to workspace
bindsym $mod+Ctrl+Shift+Left exec i3-grid sendLeft
bindsym $mod+Ctrl+Shift+Down exec i3-grid sendDown
bindsym $mod+Ctrl+Shift+Up exec i3-grid sendUp
bindsym $mod+Ctrl+Shift+Right exec i3-grid sendRight

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# send window to scratch
bindsym $mod+Shift+s scratchpad show

# Show scratch
bindsym $mod+Ctrl+s move scratchpad

# focus the child container
#bindsym $mod+d focus child

