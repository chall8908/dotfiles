[alias]
  # Logging, Timeline, and Statistics
  lg = log --oneline --graph --decorate
  graph = log --graph -20 --branches --remotes --tags  --format=format:'%Cgreen%h %Cresetâ€¢ %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order
  history = ! git-pretty-history
  stats = ! git-quick-stats
  contributors = shortlog -s -n --no-merges
  raw-diff = "!f() { git --no-pager diff --color $@ | less -R; }; f"

  # Lists
  branches = branch -a
  tags = tag --sort=version:refname
  stashes = stash list
  remotes = remote -v

  # Tree Management
  co = checkout
  c = commit
  m = merge
  b = branch
  fixup = commit --fixup
  unmerged = branch --no-merged
  amend = commit --amend
  stage-all = add -u
  unstage = reset -q HEAD --
  uncommit = reset --mixed HEAD~
  untrack = rm -r --cached
  stat = status
  staged = diff --cached --diff-algorithm=minimal -w
  stagetool = difftool --cached

  # Remote commands
  ps = push
  pl = pull
  psf = "!f() { git push --force-with-lease \"${1:-origin}\" HEAD; }; f"
  overwrite = psf
  psto = "!f() { git push -u \"${1:-origin}\" \"${2:-HEAD}\"; }; f"
  publish = psto
  delete = push origin --delete --
  repush = "!f() { git delete $1 && git psto $2; }; f"

  # Subodule commands
  sm = submodule
  smu = submodule update
  smi = submodule init

  # Utilities
  exec = "!exec "

[init]
  defaultBranch = master

[checkout]
  defaultRemote = origin

[color]
  ui = true

[core]
  excludesfile = ~/.gitignore_global
  pager = delta

[branch]
  autosetuprebase = always

[pull]
  rebase = merges

[push]
  default = current
  followTags = true

[fetch]
  prune = 1
  pruneTags = 1

[help]
  autocorrect = 25

[interactive]
  diffFilter = delta --color-only

[rebase]
  autoSquash = true
  autoStash = true

[merge]
  conflictStyle = diff3
	autoStash = true

[delta]
  features = line-numbers
  side-by-side = true
  plus-color = "#003500"
  syntax-theme = base16

[delta "line-numbers"]
  line-numbers = true
  line-numbers-minus-style = "#BB0000"
  line-numbers-plus-style = "#008800"
  line-numbers-zero-style = "#666666"
  line-numbers-left-style = "#444444"
  line-numbers-right-style = "#444444"
[safe]
	directory = /usr/local/src/i3-grid
	directory = /usr/local/src/i3lock-color
